<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rumeysal.productinformation.UrunTanitma">


    <android.support.v4.view.ViewPager
        android:id="@+id/Pager"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp" />


    <TextView
        android:id="@+id/QRID"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:hint="ID"
        android:layout_below="@+id/Pager"
        android:layout_alignLeft="@+id/Pager"
        android:layout_alignStart="@+id/Pager"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"


        android:layout_marginTop="18dp"
        android:layout_below="@+id/QRID"
        android:layout_alignLeft="@+id/QRID"
        android:layout_alignStart="@+id/QRID" />

    <EditText
        android:id="@+id/Kurum"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Kurum Bilgisi"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />

    <Button
        android:id="@+id/Onay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Clicked"
        android:text="Onayla"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Kurum"
        android:layout_toEndOf="@+id/Kurum"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />


</RelativeLayout>
