<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rumeysal.productinformation.GirisEkrani">

    <Button
        android:id="@+id/UrunBilgisiGiris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urun Bilgisi"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="136dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Pages"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="101dp" />

    <Button
        android:id="@+id/Yeniurun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/UrunBilgisiGiris"
        android:onClick="Pages"
        android:layout_alignRight="@+id/UrunBilgisiGiris"
        android:layout_below="@+id/UrunBilgisiGiris"
        android:layout_marginTop="43dp"
        android:text="Urun Yerleştir" />

    <Button
        android:id="@+id/UrunTanitma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Pages"
        android:layout_alignLeft="@+id/UrunBilgisiGiris"
        android:layout_alignStart="@+id/UrunBilgisiGiris"
        android:layout_below="@+id/Yeniurun"
        android:layout_marginTop="42dp"
        android:text="Urun Tanıt" />
</RelativeLayout>
